<!DOCTYPE html>
<html>
<head>
    <title>统计表（按天统计）</title>
		<#include "/header.html">
</head>
<body>
<div id="rrapp" v-cloak>
    <div v-show="showList">
        <div class="grid-btn">
			<#if shiro.hasPermission("summary:summaryweek:save")>
            <a class="btn btn-primary" @click="add"><i class="fa fa-plus"></i>&nbsp;新增</a>
			</#if>
			<#if shiro.hasPermission("summary:summaryweek:update")>
            <a class="btn btn-primary" @click="update"><i class="fa fa-pencil-square-o"></i>&nbsp;修改</a>
			</#if>
			<#if shiro.hasPermission("summary:summaryweek:delete")>
            <a class="btn btn-primary" @click="del"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
			</#if>
        </div>
        <table id="jqGrid"></table>
        <div id="jqGridPager"></div>
    </div>

    <div v-show="!showList" class="panel panel-default">
        <div class="panel-heading">{{title}}</div>
        <form class="form-horizontal">
														                    <div class="form-group">
                        <div class="col-sm-2 control-label">年份</div>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="summaryWeek.year" placeholder="年份"/>
                        </div>
                    </div>
											                    <div class="form-group">
                        <div class="col-sm-2 control-label">周数 按年算</div>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="summaryWeek.week" placeholder="周数 按年算"/>
                        </div>
                    </div>
											                    <div class="form-group">
                        <div class="col-sm-2 control-label">本周的用电量</div>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="summaryWeek.week_power" placeholder="本周的用电量"/>
                        </div>
                    </div>
											                    <div class="form-group">
                        <div class="col-sm-2 control-label">本周总电量 即截止本周的读表数</div>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="summaryWeek.week_total_power" placeholder="本周总电量 即截止本周的读表数"/>
                        </div>
                    </div>
											                    <div class="form-group">
                        <div class="col-sm-2 control-label">回路id</div>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="summaryWeek.line_id" placeholder="回路id"/>
                        </div>
                    </div>
											                    <div class="form-group">
                        <div class="col-sm-2 control-label">站点id</div>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="summaryWeek.station_id" placeholder="站点id"/>
                        </div>
                    </div>
											                    <div class="form-group">
                        <div class="col-sm-2 control-label">公司id</div>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="summaryWeek.company_id" placeholder="公司id"/>
                        </div>
                    </div>
							            <div class="form-group">
                <div class="col-sm-2 control-label"></div>
                <input type="button" class="btn btn-primary" @click="saveOrUpdate" value="确定"/>
                &nbsp;&nbsp;<input type="button" class="btn btn-warning" @click="reload" value="返回"/>
            </div>
        </form>
    </div>
</div>

<script src="${request.contextPath}/statics/js/modules/summary/summaryweek.js?_${.now?long}"></script>
</body>
</html>