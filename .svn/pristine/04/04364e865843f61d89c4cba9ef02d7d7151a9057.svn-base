/*---------------------login---------------------------*/
html,body{
  margin: 0;
  padding: 0;
	height: 100% !important;
}
body{
	background: url(../images/login2.jpg) no-repeat center center !important;
	background-attachment: fixed !important;
	background-size: cover !important;
}
.main-box {
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color: rgba(0,0,0,.9);
  background-image: -webkit-linear-gradient(left,transparent 0,#1b1f27 100%);
  background-image: -o-linear-gradient(left,transparent 0,#1b1f27 100%);
  background-image: linear-gradient(to right,transparent 0,#1b1f27 100%);
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#00000000', endColorstr='#ff1b1f27', GradientType=1);
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
  opacity: .3;
}
.login-box-body{
    background-color: rgba(36,53,80,.85);
    color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -280px;
    margin-left: -200px;
    width: 400px;
    border-radius: 10px; 
    z-index: 2;
    padding:30px 60px;
}
.login-box-msg{
  font-size: 22px;
  letter-spacing: 2px;
}
.form-control-feedback{
  left: 0;
}
.form-control{
  padding-left: 35px;
  border-radius: 4px;  
}
.btn-primary {
    background-color: #3f8cf8;
    border-color: #3f8cf8;
}
.btn.btn-flat{
  border-radius: 4px;
  letter-spacing: 8px;
}
.login-box-user{
  font-size: 16px;
  text-indent: 52px;
  color: #e2e1e7;
  line-height: 24px;
}
.login-box-user span{
  font-size: 14px; 
}
.alert{
  padding: 12px;
}
.alert h4 {
    font-weight: 300;
    font-size: 16px;
}