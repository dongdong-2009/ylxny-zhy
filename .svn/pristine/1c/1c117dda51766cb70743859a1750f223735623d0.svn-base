var get_by_ajax = function(index, mychart, request){
    $.ajax({
        type: "POST",
        url: request.url,
        data: request.data,
        dataType: "json",
        async: false,
        success: function(result){
            if(result.code == 0){
                //返回成功
                loadOption(index, mychart, result.data);
            }else{
                return -1;
            }
        }
    });
}

